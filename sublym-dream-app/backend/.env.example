# SUBLYM Dream App - Backend Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL="postgresql://sublym:password@localhost:5432/sublym_dream?schema=public"

# ===========================================
# SERVER
# ===========================================
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_EXPIRY_DAYS=30
PIN_SALT_ROUNDS=10

# ===========================================
# STORAGE (MinIO S3-Compatible)
# ===========================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=sublym-assets
S3_REGION=us-east-1

# ===========================================
# GENERATION ENGINE
# ===========================================
GENERATION_API_URL=http://localhost:8000/api/generate
GENERATION_API_KEY=your-generation-api-key

# ===========================================
# EMAIL (Brevo)
# ===========================================
BREVO_API_KEY=your-brevo-api-key
EMAIL_FROM=noreply@sublym.org
EMAIL_FROM_NAME=Sublym

# ===========================================
# DOMAIN (Never hardcode!)
# ===========================================
APP_URL=http://localhost:5173
API_URL=http://localhost:3001

# ===========================================
# ANALYTICS (Optional - configured later)
# ===========================================
# GTM_ID=GTM-XXXXXXX
# GA4_ID=G-XXXXXXXXXX

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
