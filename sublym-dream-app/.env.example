# SUBLYM Dream App - Environment Variables
# Copy to .env and fill in values

# ===========================================
# DATABASE
# ===========================================
DB_PASSWORD=sublym_secret_change_me
DATABASE_URL=postgresql://sublym:${DB_PASSWORD}@localhost:5432/sublym_dream?schema=public

# ===========================================
# STORAGE (MinIO S3-Compatible)
# ===========================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin_change_me
S3_BUCKET=sublym-assets
S3_REGION=us-east-1

# ===========================================
# SECURITY
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
SESSION_EXPIRY_DAYS=30
PIN_SALT_ROUNDS=10
LINK_SIGNING_SECRET=your-link-signing-secret-change-me

# ===========================================
# URLS (Never hardcode domains!)
# ===========================================
APP_URL=http://localhost:5173
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:5173

# ===========================================
# GENERATION ENGINE
# ===========================================
GENERATION_API_URL=http://localhost:8000/api/generate
GENERATION_API_KEY=your-generation-api-key

# ===========================================
# EMAIL (Brevo)
# ===========================================
BREVO_API_KEY=your-brevo-api-key
EMAIL_FROM=noreply@sublym.org
EMAIL_FROM_NAME=Sublym

# ===========================================
# PAYMENTS (Stripe)
# ===========================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# ANALYTICS (Optional - configure later)
# ===========================================
# GTM_ID=GTM-XXXXXXX
# GA4_ID=G-XXXXXXXXXX
